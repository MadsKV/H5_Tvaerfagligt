<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SmartShop_App.Controls.OrderView">
    <Frame>
        <VerticalStackLayout>
            <Label Text="{Binding OrderId, FallbackValue='OrderId'}"/>

            <Label Text="{Binding ProductId, FallbackValue='Product ID'}"/>

            <Label Text="{Binding OrderAmount, FallbackValue='Order Amount: 4'}"/>

            <Label Text="{Binding ShippingCost, FallbackValue='Shopping Cost: 19.99'}"/>

            <Label Text="{Binding OrderDate, FallbackValue='Date'}"/>

        </VerticalStackLayout>
    </Frame>
</ContentView>
